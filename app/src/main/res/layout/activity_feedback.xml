<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.pedrofeitor.mypoint.LogInActivity" >

    <Button
        android:id="@+id/full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="62dp"
        android:onClick="onclickfull"
        android:text="Full"
        android:visibility="invisible" />

    <Button
        android:id="@+id/clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/full"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:onClick="onclickclean"
        android:text="Unclean"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fullText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/full"
        android:layout_alignLeft="@+id/full"
        android:layout_alignRight="@+id/full"
        android:layout_alignStart="@+id/full"
        android:layout_below="@+id/full"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="103dp"
        android:text="full"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cleanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fullText"
        android:layout_alignBottom="@+id/fullText"
        android:layout_alignLeft="@+id/clean"
        android:layout_alignStart="@+id/clean"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="unclean"
        android:visibility="invisible" />

</RelativeLayout>